# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB:
MONGODB_URI=mongodb://localhost:27017/decentralized-todo
# For MongoDB Atlas (production):
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/decentralized-todo?retryWrites=true&w=majority

# JWT Secret (for optional session management after wallet verification)
# IMPORTANT: Must be at least 32 characters in production!
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Blockchain Configuration
# RPC URLs for different networks (primary endpoints)
ETHEREUM_SEPOLIA_RPC=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_MUMBAI_RPC=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_GOERLI_RPC=https://arb-goerli.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_SEPOLIA_RPC=https://opt-sepolia.g.alchemy.com/v2/YOUR_API_KEY
LOCALHOST_RPC=http://127.0.0.1:8545

# Backup RPC URLs (optional - for failover)
# ETHEREUM_SEPOLIA_RPC_BACKUP=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
# POLYGON_MUMBAI_RPC_BACKUP=https://rpc-mumbai.maticvigil.com
# ARBITRUM_GOERLI_RPC_BACKUP=https://goerli-rollup.arbitrum.io/rpc
# OPTIMISM_SEPOLIA_RPC_BACKUP=https://sepolia.optimism.io

# Default network for blockchain operations
DEFAULT_NETWORK=localhost

# Blockchain Confirmation Blocks (chain-specific)
# Number of blocks to wait before considering a transaction final
# Defaults are set based on chain characteristics if not specified
CONFIRMATION_BLOCKS_LOCALHOST=1
CONFIRMATION_BLOCKS_SEPOLIA=12
CONFIRMATION_BLOCKS_POLYGONMUMBAI=128
CONFIRMATION_BLOCKS_ARBITRUMGOERLI=1
CONFIRMATION_BLOCKS_OPTIMISMSEPOLIA=1

# Blockchain Reconnection Settings
MAX_RECONNECT_ATTEMPTS=5
RECONNECT_BASE_DELAY=5000

# Contract Addresses (filled after deployment)
# These will be loaded from deployment JSON files
# You can override them here if needed
# TODOLIST_CONTRACT_LOCALHOST=0x5FbDB2315678afecb367f032d93F642f64180aa3
# TODOLIST_CONTRACT_SEPOLIA=
# TODOLIST_CONTRACT_POLYGON_MUMBAI=
# TODOLIST_CONTRACT_ARBITRUM_GOERLI=
# TODOLIST_CONTRACT_OPTIMISM_SEPOLIA=

# CORS Configuration
# Comma-separated list of allowed origins
# Example: CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://app.example.com
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
