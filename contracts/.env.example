# Private key for deployment (DO NOT COMMIT THE ACTUAL .env FILE)
# You can get this from MetaMask: Account Details -> Export Private Key
PRIVATE_KEY=your_private_key_here

# RPC URLs
# Get free API keys from:
# Alchemy: https://www.alchemy.com/
# Infura: https://infura.io/

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Polygon Mumbai Testnet RPC URL
POLYGON_MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_API_KEY

# Arbitrum Goerli Testnet RPC URL
ARBITRUM_GOERLI_RPC_URL=https://arb-goerli.g.alchemy.com/v2/YOUR_API_KEY

# Optimism Sepolia Testnet RPC URL
OPTIMISM_SEPOLIA_RPC_URL=https://opt-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Mainnet RPC URL (use with caution)
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Etherscan API Key (for contract verification)
# Get from: https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygonscan API Key (for Polygon contract verification)
# Get from: https://polygonscan.com/myapikey
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# Arbiscan API Key (for Arbitrum contract verification)
# Get from: https://arbiscan.io/myapikey
ARBISCAN_API_KEY=your_arbiscan_api_key_here

# Optimism Etherscan API Key (for Optimism contract verification)
# Get from: https://optimistic.etherscan.io/myapikey
OPTIMISM_ETHERSCAN_API_KEY=your_optimism_etherscan_api_key_here

# Optional: CoinMarketCap API Key (for gas reporting)
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
